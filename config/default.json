{
    "server":
    {
        "port": 8080,
        "listen": "localhost",
        "error_page": "/var/www/error.html",

        "route":
        {
            "/":
            {
                "allow_methods": [
                    "GET",
                    "POST",
                    "DELETE"
                ],
                "root": "/var/www"
            }
        },

        "route1":
        {
            "/redirect":
            {
                "allow_method": [
                    "GET"
                ],
                "redirect": "http://www.google.com"
            }
        },

        "route2":
        {
            "/cgi-bin":
            {
                "allow_method": [
                    "GET",
                    "POST"
                ],
                "cgi": "/var/www/cgi-bin"
            }
        },

        "route3":
        {
            "/upload":
            {
                "allow_method": [
                    "POST"
                ],
                "upload": "/var/www/upload"
            }
        }
    },

    "server1":
    {
        "port": 80,
        "listen": "127.0.0.1",

        "route":
        {
            "/":
            {
                "allow_method": [
                    "GET",
                    "POST",
                    "DELETE"
                ],
                "root": "/var/www"
            }
        }
    }
}
